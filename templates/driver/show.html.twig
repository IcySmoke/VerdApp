{% extends 'base.html.twig' %}

{% block title %}Driver{% endblock %}

{% block body %}
    <h1>Driver</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ driver.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ driver.user.getFullName }}</td>
            </tr>
            <tr>
                <th>Image</th>
                <td><img src="public/uploads/drivers/{{ driver.image }}" alt=""></td>
            </tr>
            <tr>
                <th>Birthday</th>
                <td>{{ driver.birthday ? driver.birthday|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>DistanceDriven</th>
                <td>{{ driver.distanceDriven }}</td>
            </tr>
            <tr>
                <th>EmployeeSince</th>
                <td>{{ driver.employeeSince ? driver.employeeSince|date('Y-m-d') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_driver_index') }}">back to list</a>

    <a href="{{ path('app_driver_edit', {'id': driver.id}) }}">edit</a>

    {{ include('driver/_delete_form.html.twig') }}
{% endblock %}
