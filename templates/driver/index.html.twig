{% extends 'base.html.twig' %}

{% block title %}Driver index{% endblock %}

{% block body %}
    <a href="{{ path('app_index') }}">back</a>
    <h1>Driver index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Image</th>
                <th>Birthday</th>
                <th>DistanceDriven</th>
                <th>EmployeeSince</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for driver in drivers %}
            <tr>
                <td>{{ driver.id }}</td>
                <td>{{ driver.user.getFullName }}</td>
                <td>{{ driver.image }}</td>
                <td>{{ driver.birthday ? driver.birthday|date('Y-m-d') : '' }}</td>
                <td>{{ driver.distanceDriven }}</td>
                <td>{{ driver.employeeSince ? driver.employeeSince|date('Y-m-d') : '' }}</td>
                <td>
                    <a href="{{ path('app_driver_show', {'id': driver.id}) }}">show</a>
                    <a href="{{ path('app_driver_edit', {'id': driver.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="8">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_driver_new') }}">Create new</a>
{% endblock %}
