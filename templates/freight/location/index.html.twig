{% extends 'base.html.twig' %}

{% block title %}Location index{% endblock %}

{% block body %}
    <a href="{{ path('app_freight_index') }}">back</a>
    <h1>Location index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>ZipCode</th>
                <th>City</th>
                <th>Address</th>
                <th>State</th>
                <th>CompanyName</th>
                <th>Phone</th>
                <th>Comment</th>
                <th>Name</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for location in locations %}
            <tr>
                <td>{{ location.id }}</td>
                <td>{{ location.zipCode }}</td>
                <td>{{ location.city }}</td>
                <td>{{ location.address }}</td>
                <td>{{ location.state }}</td>
                <td>{{ location.companyName }}</td>
                <td>{{ location.phone }}</td>
                <td>{{ location.comment }}</td>
                <td>{{ location.name }}</td>
                <td>
                    <a href="{{ path('app_freight_location_show', {'id': location.id}) }}">show</a>
                    <a href="{{ path('app_freight_location_edit', {'id': location.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="10">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_freight_location_new') }}">Create new</a>
{% endblock %}
