{% extends 'base.html.twig' %}

{% block title %}Hello ApplicationController!{% endblock %}

{% block body %}
    <style>
        .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
        .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
    </style>

    <div class="example-wrapper">
        <h1>VerdApp</h1>
        {% if user is not null %}
            <p>
                Hello <b>{{ user.getFullName }}</b>!
                <a href="{{ path('app_logout') }}">logout</a>
            </p>
        {% endif %}
    </div>
    <a href="{{ path('app_car_index') }}">cars</a>
    <a href="{{ path('app_driver_index') }}">drivers</a>
    <a href="{{ path('app_car_tire_index') }}">tires</a>
    <a href="{{ path('app_freight_freight_index') }}">freights</a>
    {% if user.getDriver is not null %}
        <a href="#">drivers only (and admins maybe)</a>
    {% endif %}
{% endblock %}
